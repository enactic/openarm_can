require "time"

apache_arrow_repository = ENV["APACHE_ARROW_REPOSITORY"]
if apache_arrow_repository.nil?
  raise "Specify APACHE_ARROW_REPOSITORY environment variable"
end
require "#{apache_arrow_repository}/dev/tasks/linux-packages/package-task"

class OpenArmCanPackageTask < PackageTask
  def initialize
    super("openarm-can", repository_version, latest_commit_time)
  end

  private

  def repository_version
    "1.0.0"
  end

  def latest_commit_time
    Time.iso8601(`git log -n 1 --format=%aI`.chomp).utc
  end

  def enable_yum?
    false
  end

  def define_archive_task
    file @archive_name do
      if File.exist?("../#{@archive_name}")
        ln_s("../#{@archive_name}",
             @archive_name)
      else
        download("https://github.com/enactic/openarm_can/releases/download/#{@version}/#{@archive_name}",
                 @archive_name)
      end
    end
  end
end

task = OpenArmCanPackageTask.new
task.define
